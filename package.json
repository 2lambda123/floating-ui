{
  "name": "@popperjs/core",
  "version": "2.0.0-next.9",
  "description": "A kickass library used to manage poppers in web applications",
  "main": "dist/cjs/popper.js",
  "main:umd": "dist/umd/popper.js",
  "module": "lib/index.js",
  "unpkg": "dist/umd/popper.min.js",
  "author": "Federico Zivolo <fzivolo@quid.com>",
  "license": "MIT",
  "repository": "github:popperjs/popper.js",
  "scripts": {
    "clean": "rimraf lib && rimraf dist && rimraf test/visual/dist",
    "test": "jest --coverage --watch",
    "test:ci": "jest --coverage",
    "dev": "concurrently 'yarn dev:serve' 'yarn dev:bundles --watch'",
    "dev:serve": "serve tests/visual",
    "dev:bundles": "cross-env NODE_ENV=development rollup -c rollup.config.js",
    "build": "yarn clean && yarn build:es && yarn build:bundles && yarn build:flow",
    "build:es": "babel src -d lib --ignore '**/*.test.js','**/__mocks__'",
    "build:bundles": "rollup -c rollup.config.js",
    "build:flow": "flow-copy-source src dist/cjs --ignore '{__mocks__/*,*.test}.js'",
    "prepare": "yarn build"
  },
  "files": [
    "/dist",
    "/lib"
  ],
  "sideEffects": false,
  "prettier": {
    "parser": "babel-flow",
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "loose": true,
          "modules": false
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-transform-flow-strip-types",
      [
        "@babel/plugin-proposal-object-rest-spread",
        {
          "loose": true,
          "useBuiltIns": true
        }
      ],
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ],
      "dev-expression"
    ],
    "env": {
      "test": {
        "presets": [
          "@babel/env"
        ]
      }
    }
  },
  "jest": {
    "setupFiles": [
      "raf/polyfill"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.5",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-transform-flow-strip-types": "^7.0.0",
    "@babel/preset-env": "^7.1.5",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-dev-expression": "^0.2.2",
    "concurrently": "^4.0.1",
    "cross-env": "^5.2.0",
    "flow-bin": "0.112.0",
    "flow-copy-source": "^2.0.2",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "prettier": "^1.15.1",
    "pretty-quick": "^1.8.0",
    "raf": "^3.4.1",
    "rollup": "^1.27.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-bundle-size": "^1.0.2",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-terser": "^5.1.2",
    "serve": "^10.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
