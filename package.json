{
  "name": "@popperjs/core",
  "version": "2.0.0-next.9",
  "description": "A kickass library used to manage poppers in web applications",
  "main": "dist/cjs/popper.js",
  "main:umd": "dist/umd/popper.js",
  "module": "lib/index.js",
  "unpkg": "dist/umd/popper.min.js",
  "author": "Federico Zivolo <fzivolo@quid.com>",
  "license": "MIT",
  "repository": "github:popperjs/popper.js",
  "scripts": {
    "clean": "rimraf lib && rimraf dist && rimraf test/visual/dist",
    "test:unit": "jest --coverage --watch src",
    "test:functional": "jest tests/functional",
    "dev": "concurrently 'yarn dev:serve' 'yarn dev:bundles --watch'",
    "dev:serve": "serve tests/visual",
    "dev:bundles": "cross-env NODE_ENV=development rollup -c rollup.config.js",
    "build": "yarn clean && yarn build:es && yarn build:bundles && yarn build:flow",
    "build:es": "babel src -d lib --ignore '**/*.test.js','**/__mocks__'",
    "build:bundles": "rollup -c rollup.config.js",
    "build:flow": "flow-copy-source src dist/cjs --ignore '{__mocks__/*,*.test}.js'",
    "prepublishOnly": "yarn build",
    "flow": "flow",
    "eslint": "eslint ."
  },
  "files": [
    "/dist",
    "/lib"
  ],
  "sideEffects": false,
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "proseWrap": "always"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "loose": true,
          "modules": false
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-transform-flow-strip-types",
      [
        "@babel/plugin-proposal-object-rest-spread",
        {
          "loose": true,
          "useBuiltIns": true
        }
      ],
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ],
      "dev-expression"
    ],
    "env": {
      "test": {
        "presets": [
          "@babel/env"
        ],
        "plugins": [
          "@babel/plugin-transform-runtime"
        ]
      }
    }
  },
  "jest": {
    "preset": "jest-puppeteer",
    "testMatch": [
      "<rootDir>/src/**/*.test.js",
      "<rootDir>/tests/**/*.test.js"
    ],
    "globalSetup": "jest-environment-puppeteer/setup",
    "globalTeardown": "jest-environment-puppeteer/teardown",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setupTests.js"
    ],
    "reporters": [
      "default",
      "<rootDir>/tests/image-reporter.js"
    ],
    "setupFiles": [
      "dotenv/config"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype",
      "unused-imports"
    ],
    "rules": {
      "flowtype/require-valid-file-annotation": [
        "error",
        "always"
      ],
      "unused-imports/no-unused-imports": "error",
      "unused-imports/no-unused-vars": "error"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.5",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-transform-flow-strip-types": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.7.4",
    "@babel/preset-env": "^7.1.5",
    "@babel/runtime": "^7.7.4",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-plugin-dev-expression": "^0.2.2",
    "chalk": "^3.0.0",
    "concurrently": "^5.0.0",
    "cross-env": "^6.0.3",
    "dotenv": "^8.2.0",
    "eslint-plugin-flowtype": "^4.5.2",
    "eslint-plugin-unused-imports": "^0.1.1",
    "flow-bin": "0.112.0",
    "flow-copy-source": "^2.0.2",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-environment-puppeteer": "^4.3.0",
    "jest-image-snapshot": "^2.11.1",
    "jest-puppeteer": "^4.3.0",
    "poster": "^0.0.9",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "puppeteer": "^2.0.0",
    "puppeteer-firefox": "^0.5.0",
    "rollup": "^1.27.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-bundle-size": "^1.0.2",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-terser": "^5.1.2",
    "serve": "^11.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
